@model AulaRemotaThriboCrossfit.Models.Exercicio

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Exercício</h1>

<h3>Tem certeza que quer deletar esse vídeo?</h3>
<div>
    <h4>Exercicio</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.VideoURL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VideoURL)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Uid" />
        <a asp-action="Index" type="button" class="btn btn-info">
            <span class="glyphicon glyphicon-arrow-left"></span> Voltar
        </a> |
        <button type="submit" class="btn btn-danger">
            <span class="glyphicon glyphicon-trash"></span> Deletar
        </button>
    </form>
</div>