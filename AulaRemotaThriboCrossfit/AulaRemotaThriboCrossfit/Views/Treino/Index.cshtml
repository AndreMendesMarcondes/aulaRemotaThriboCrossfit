@model IEnumerable<AulaRemotaThriboCrossfit.Models.Treino>

@{
    ViewData["Title"] = "Index";
}

<h1>Treino</h1>

<p>
    <a asp-action="Create" type="button" class="btn btn-primary">
        <span class="glyphicon glyphicon-plus"></span> Adicionar
    </a>
</p>
<table class="table" id="tableTreinos">
    <thead>
        <tr>
            <th>
                Data
            </th>
            <th>
                Dia
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Equipamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @item.Dia.ToString("dd/MM/yyyy")
            </td>
            <td>
                @{
                    switch (item.Dia.DayOfWeek.ToString())
                    {
                        case "Monday":
                            <span>Segunda</span>
                            break;
                        case "Tuesday":
                            <span>Terça</span>
                            break;
                        case "Wednesday":
                            <span>Quarta</span>
                            break;
                        case "Thursday":
                            <span>Quinta</span>
                            break;
                        case "Friday":
                            <span>Sexta</span>
                            break;
                        case "Saturday":
                            <span>Sábado</span>
                            break;
                        default:
                            <span>Domningo</span>
                            break;
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Equipamento)
            </td>
            <td>
                <a asp-action="Ver" asp-route-id="@item.Uid" type="button" class="btn btn-primary"  target="_blank">
                    <span class="glyphicon glyphicon-eye-open"></span> Visualizar
                </a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Uid" type="button" class="btn btn-danger">
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#tableTreinos').DataTable({
            language: {
                "sEmptyTable": "Nenhum registro encontrado",
                "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando 0 até 0 de 0 registros",
                "sInfoFiltered": "(Filtrados de _MAX_ registros)",
                "sInfoPostFix": "",
                "sInfoThousands": ".",
                "sLengthMenu": "_MENU_ resultados por página",
                "sLoadingRecords": "Carregando...",
                "sProcessing": "Processando...",
                "sZeroRecords": "Nenhum registro encontrado",
                "sSearch": "Pesquisar",
                "oPaginate": {
                    "sNext": "Próximo",
                    "sPrevious": "Anterior",
                    "sFirst": "Primeiro",
                    "sLast": "Último"
                },
                "oAria": {
                    "sSortAscending": ": Ordenar colunas de forma ascendente",
                    "sSortDescending": ": Ordenar colunas de forma descendente"
                }
            }
        });
    });
</script>

